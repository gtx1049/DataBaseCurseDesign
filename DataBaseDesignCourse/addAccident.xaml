<Window x:Class="DataBaseDesignCourse.addAccident"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="addAccident" Height="300" Width="300">
    <Grid>
        <TextBlock Height="21" Margin="44,26,0,0" Name="textBlock1" VerticalAlignment="Top" Text="地址：" HorizontalAlignment="Left" Width="40" />
        <TextBox Height="23" Margin="82,21,37,0" Name="accidentAddress" VerticalAlignment="Top" />
        <TextBlock Height="21" Margin="44,63,0,0" Name="textBlock2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" Text="时间:" />
        <TextBox Height="23" Margin="82,59,37,0" Name="accidentTime" VerticalAlignment="Top" />
        <TextBlock Height="21" Margin="44,92,0,0" Name="textBlock3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="64" Text="描述:" />
        <TextBox Margin="44,110,37,49" Name="accidentContent" />
        <Button Height="23" Margin="68,0,0,16" Name="cancel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="64" Click="cancel_Click">取消</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,63,16" Name="sure" VerticalAlignment="Bottom" Width="64" Click="sure_Click">确定</Button>
    </Grid>
</Window>
