<Window x:Class="DataBaseDesignCourse.selectCitizen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="selectCitizen" Height="300" Width="300">
    <Grid>
        <ListView Margin="0,0,0,38" Name="addCitizenList" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="姓名" DisplayMemberBinding="{Binding Path=Name}" Width="50"/>
                    <GridViewColumn Header="身份证" DisplayMemberBinding="{Binding Path=PKID}" Width="160"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,9" Name="OK" VerticalAlignment="Bottom" Width="75" Click="OK_Click">确定</Button>
    </Grid>
</Window>
